/* 左右滑动的版本 */
 .out-box{
    overflow: hidden;
}
 .inner-box{
    width: 4800px;
    position: relative;
    top: 0;
}
.guess-you-like-content li{
    width: 1200px;
    height: 500px;
    float: left;
}
.guess-you-like-content li img{
    width: 100%;
    height: 100%;
}
